{
  "compilerOptions": {
    "target": "es2016", 
    "module": "ES2015", 
    "rootDir": "./src", 
    "outDir": "./dist",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "skipLibCheck": true, 
    "removeComments": true, 
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true, 
    "noFallthroughCasesInSwitch": true, 
    "noUncheckedIndexedAccess": true 
  }
}